<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="match_parent"
    tools:context=".FormTambahTrainerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Form Input Data Trainer"
                android:textStyle="bold"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_NamaTrainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="8dp"
                android:hint="Nama Trainer"
                android:importantForAutofill="no" />

            <EditText
                android:id="@+id/edt_Pend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Pendidikan Formal Terakhir" />

            <EditText
                android:id="@+id/edt_HomeBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Gym Home Base" />

            <EditText
                android:id="@+id/edt_OnCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="On Call Area"
                android:inputType="textMultiLine"/>

            <EditText
                android:id="@+id/edt_NomorTelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Nomor Telephone"
                android:inputType="number"/>

            <EditText
                android:id="@+id/edt_Medsos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Nama Akun Media Sosial" />

            <EditText
                android:id="@+id/edt_PengKerja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Pengalaman Kerja"
                android:inputType="textMultiLine"/>

            <EditText
                android:id="@+id/edt_TarifPert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Tarif Pertemuan (/bulan)"
                android:inputType="textMultiLine"/>

            <EditText
                android:id="@+id/edt_Sertifikasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Sertifikasi"
                android:inputType="textMultiLine"/>

            <EditText
                android:id="@+id/edt_Keahlian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Keahlian"
                android:inputType="textMultiLine"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:text="FOTO PROFIL TRAINER"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <include layout="@layout/activity_content_foto_profil_gym" />

                <Button
                    android:id="@+id/btn_UploadTrainer"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:background="@drawable/roundedbutton"
                    android:text="Upload Foto Profil"
                    android:textColor="@android:color/white" />

            </LinearLayout>




            <Button
                android:id="@+id/btn_submit"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:background="@drawable/roundedbutton"
                android:text="Submit"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>