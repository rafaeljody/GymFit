<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tips_latihan">



    <View
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/round_style6" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/slideFaktaTips"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>

    <TextView
        android:id="@+id/title_fakta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/montserratbold"
        android:text="EDUKASI"
        android:textColor="@color/C5"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geser untuk melihat info lain"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/montserratbold"
        android:textColor="@color/C5"
        android:textSize="16sp"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="90dp"
        android:src="@drawable/swipee"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="115dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Klik untuk melihat video"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="175dp"
        android:fontFamily="@font/montserratbold"
        android:textColor="@color/C5"
        android:textSize="16sp"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="90dp"
        android:src="@drawable/click"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="140dp"
        />


</RelativeLayout>